<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item
        android:id="@+id/tick"
        android:drawable="@drawable/vd_pathmorph_pen"
        android:state_checked="false"/>
    <item
        android:id="@+id/cross"
        android:drawable="@drawable/vd_pathmorph_close"
        android:state_checked="true" />



    <transition
        android:drawable="@drawable/avd_pathmorph_close_tick"
        android:fromId="@id/cross"
        android:toId="@id/tick" />

    <transition
        android:drawable="@drawable/avd_pathmorph_tick_close"
        android:fromId="@id/tick"
        android:toId="@id/cross" />

</animated-selector>